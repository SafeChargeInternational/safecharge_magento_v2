<?xml version="1.0" encoding="UTF-8"?>
<!-- Add custom info block for the products with Nuvei payment plans -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
	<body>
		<referenceBlock name="product.info.options.wrapper.bottom">
            <block class="Nuvei\Payments\Block\Frontend\Product\NuveiPlanDetails" 
				   name="nuvei-plan-details" 
				   template="Nuvei_Payments::product_plan_details.phtml" 
				   before="product.info.addtocart">
            </block>
        </referenceBlock>
    </body>
</page>